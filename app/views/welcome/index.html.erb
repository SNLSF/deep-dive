<header>
	<div class="row">
		<h1 class="small-12 text-center columns">Women.</h1>
	</div>
	<div class="row">
		<h2 class="small-3 text-center columns">Feminism</h2>
		<h2 class="small-3 text-center columns">Race</h2>
		<h2 class="small-3 text-center columns">History</h2>
		<h2 class="small-3 text-center columns">Pop Culture</h2>
	</div>
</header>
<section>
	<div class="row">
		<div class="small-5 columns">
			<h3>
				I'm currently reading...<br>
				<span class="title"><%= @current_book.title %></span>
			</h3>
			<p>
				by 
				<% @current_influencers.each do |influencer| %>
					<%= influencer.name %><br>
				<% end %>
			</p>
		</div>
		<div class="small-7 columns">
			<img src="<%= @current_book.image %>" alt="Book Cover" class="cover-medium">
		</div>
	</div>
</section>
<!-- CAROUSEL WITH QUOTES -->
<section>
	<div class="row">
		<h3 class="small-12 columns text-center">The Influencers</h3>
	</div>
	<div class="row">
		<div class="small-12 columns">
			<div class="wrap">
				<% @influencers.each do |influencer| %>
					<div class="box">
				    <div class="boxInner">
				      <img src="<%= influencer.image %>" alt="Author Portrait" class="cover-medium"/>
				      <div class="titleBox"><%= influencer.name %></div>
				    </div>
				  </div>
				<% end %>
			</div>
		</div>
	</div>
</section>

<!-- SIMPLE GRID -->
<section>
	<div class="row">
		<div class="small-12 columns text-center">
			<h3>The Library</h3>
		</div>
	</div>
	<div class="row">
		<div class="small-1 columns">
			<i class="previous fa fa-angle-left fa-5x"></i>
		</div>
		<div class="small-10 columns">
				<% @books.each do |book| %>
					<div class="book-cover">
						<img src="<%= book.image %>" alt="Book Cover" class="book cover-medium">
					</div>
					<div class="book-blurb">
						<span class="quote">"This will be a quote from the book that will be top row."</span><br>
						<a href="/book/<%=book.id%>">My thoughts on <%= book.title %></a>
					</div>
				<% end %>
		</div>
		<div class="small-1 columns">
			<i class="next fa fa-angle-right fa-5x"></i>
		</div>
	</div>
</section>
